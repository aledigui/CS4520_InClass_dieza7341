<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inClass02_avatar">

    <TextView
        android:id="@+id/selectAvatar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/select_avatar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageAvatar_l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/imageAvatar_l2"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_l2"
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/imageAvatar_r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/imageAvatar_r2"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_r2"
        app:srcCompat="@drawable/avatar_m_1" />

    <ImageView
        android:id="@+id/imageAvatar_l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/imageAvatar_l1"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_l1"
        app:srcCompat="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/imageAvatar_r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/imageAvatar_r1"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_r1"
        app:srcCompat="@drawable/avatar_m_2" />

    <ImageView
        android:id="@+id/imageAvatar_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatar_text"
        app:srcCompat="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/imageAvatar_r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatar_text"
        app:srcCompat="@drawable/avatar_m_3" />
</androidx.constraintlayout.widget.ConstraintLayout>