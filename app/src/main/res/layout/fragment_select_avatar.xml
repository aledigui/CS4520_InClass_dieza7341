<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectAvatarContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#337536"
    tools:context=".inClass03.SelectAvatarFragment">

    <ImageView
        android:id="@+id/imageAvatar_l1fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/avatar_f_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatarText" />

    <ImageView
        android:id="@+id/imageAvatar_l2fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar_f_2"
        app:layout_constraintStart_toStartOf="@+id/imageAvatar_l1fragment"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_l1fragment" />

    <ImageView
        android:id="@+id/imageAvatar_l3fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar_f_3"
        app:layout_constraintStart_toStartOf="@+id/imageAvatar_l2fragment"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_l2fragment" />

    <ImageView
        android:id="@+id/imageAvatar_r1fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/avatar_m_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatarText" />

    <ImageView
        android:id="@+id/imageAvatar_r2fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar_m_2"
        app:layout_constraintEnd_toEndOf="@+id/imageAvatar_r1fragment"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_r1fragment" />

    <ImageView
        android:id="@+id/imageAvatar_r3fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar_m_1"
        app:layout_constraintEnd_toEndOf="@+id/imageAvatar_r2fragment"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar_r2fragment" />

    <TextView
        android:id="@+id/selectAvatarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/select_avatar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>